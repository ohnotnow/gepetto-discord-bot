# Core Discord config
# Used to identify and connect the bot to your Discord server and 'primary'channel (eg, your 'general-chat' channel).
DISCORD_SERVER_ID="123456789012345678"
DISCORD_BOT_TOKEN="your-discord-bot-token"
DISCORD_BOT_CHANNEL_ID="123456789012345678"

# LLM/provider selection
# Choose which LLM provider + model name the bot uses by default.
BOT_PROVIDER="openai"
BOT_MODEL="gpt-4o-mini"

# Provider API keys (set the one(s) you use)
# Leave unused providers blank.
OPENAI_API_KEY="sk-..."
OPENROUTER_API_KEY=""
ANTHROPIC_API_KEY=""
PERPLEXITY_API_KEY=""
ANYSCALE_API_KEY=""
ANYSCALE_BASE_URL="https://api.endpoints.anyscale.com/v1"
REPLICATE_API_KEY=""
SENTRY_AUTH_TOKEN=""

# Bot identity and prompts
# Used in system prompts and responses.
BOT_NAME="Gepetto"
BOT_OMNILISTENS="false"
DISCORD_BOT_DEFAULT_PROMPT="You are a helpful AI assistant..."
# If this is set, the bot will randomly use this prompt instead of the default.
DISCORD_BOT_ALTERNATE_PROMPT="You are a spooky storyteller..."

# Feature toggles and scheduling (presence-based; uncomment to enable)
# These are treated as "enabled if set" in code.
# Turn on the bot 'choosing' to just say something in the primary channel once in a while (with the chat context)
# FEATURE_RANDOM_CHAT=1
# Let the bot post spooky messages overnight (with a low chance of being posted)
# FEATURE_HORROR_CHAT=1
# Make an image based on the primary channels recent comments
# CHAT_IMAGE_ENABLED=1
# Make a video based on the primary channels recent comments
# CHAT_VIDEO_ENABLED=1
# What hour the image/video should be created
CHAT_IMAGE_HOUR="17"
# Used in prompts when users ask where the bot is based.
BOT_LOCATION="London"

# User/context data
# Personalize image prompts and bot responses.
# Steers the bot to use these locations in it's responses and the chat images where appropriate.
USER_LOCATIONS="London, Manchester, Edinburgh"
CAT_DESCRIPTIONS="Mochi is a fluffy orange tabby, Luna is a sleek black cat"
# If set - the bot will use this to say happy birthday to the user on their birthday with a random 'fact from history on this day'
DISCORD_BOT_BIRTHDAYS="123456789:25/12,987654321:01/01"

# Memory extraction - this will run a task once a day to extract basic memories about each user from the primary channel history.  The bot then gets a % of these in it's context when replying to that user.
# Extracts memories from chat on a schedule.
ENABLE_USER_MEMORY="false"
ENABLE_USER_MEMORY_EXTRACTION="false"
MEMORY_EXTRACTION_HOUR="3"

# URL history extraction - this runs a task once a day to generate a short summary of the URLs posted in the given channels.  The bot then gets a tool so users can ask it things like 'what was that link about that thing?' and it will search the summaries for matches
# Scans channels on a schedule to build a URL history.
ENABLE_URL_HISTORY="false"
ENABLE_URL_HISTORY_EXTRACTION="false"
URL_HISTORY_CHANNELS="123456789,987654321"
URL_HISTORY_EXTRACTION_HOUR="4"

# Catch-up feature - lets users ask "catch me up" to get a summary of what they missed in monitored channels.
# Reuses URL_HISTORY_CHANNELS for which channels to monitor.
ENABLE_CATCH_UP="false"                  # Enable the catch_up tool (all bots can respond to requests)
ENABLE_CATCH_UP_TRACKING="false"         # Enable activity tracking (only one bot should do this)

# Media/model options
# Optional overrides for specific features.
IMAGE_PROMPT_MODEL=""
SPELLCHECK_MODEL=""

# Flags that enable features if set (uncomment to enable)
# ENABLE_NANO_BANANA_PRO=1
# ENABLE_GPT_IMAGE=1

# Reminders - lets users ask the bot to set a reminder using natural language.
ENABLE_REMINDERS="false"
REMINDER_FREQUENCY="5"

# Weather
# Used by the weather command/provider.
OPENWEATHERMAP_API_KEY=""
MET_OFFICE_API_KEY=""
